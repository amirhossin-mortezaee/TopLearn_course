@model IEnumerable<TopLearn.DataLayer.Entities.Course.CourseGroup>
<div class="main-menu">
    <div class="container">
        <nav>
            <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
            <ul>
                @foreach (var Group in Model.Where(g => g.ParenId == null))
                {
                    <li>
                        <a href=""> @Group.GroupTitle </a>

                        @if (Model.Any(g => g.ParenId == Group.GroupId))
                        {
                            <ul>
                                @foreach (var sub in Model.Where(g => g.ParenId == Group.GroupId))
                                {
                                    <li><a href=""> @sub.GroupTitle </a></li>
                                }
                            </ul>
                        }
                    </li>

                }
            </ul>
        </nav>
    </div>
</div>
